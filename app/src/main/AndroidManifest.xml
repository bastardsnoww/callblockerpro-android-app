<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- required by CallScreeningService to answer/end calls if needed, though RoleManager handles most -->
    <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS" />
    
    <!-- Required for notifications on Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Critical Permissions for Call Blocking -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    
    <!-- Note: ROLE_CALL_SCREENING is handled by the system dialog, not a permission declaration, 
         but we need to declare the service with the permission BIND_SCREENING_SERVICE -->

    <application
        android:name=".CallBlockerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:enableOnBackInvokedCallback="true"
        android:theme="@style/Theme.CallBlockerPro">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CallBlockerPro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.CallBlockingService"
            android:permission="android.permission.BIND_SCREENING_SERVICE"
            android:exported="true"
            android:label="@string/app_name"
            android:description="@string/app_name">
            <intent-filter>
                <action android:name="android.telecom.CallScreeningService" />
            </intent-filter>
        </service>

    </application>
</manifest>
